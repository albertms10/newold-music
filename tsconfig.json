{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "es2017",
      "dom",
      "webworker"
    ],
    "resolveJsonModule": true,
    "types": [
      "svelte",
      "node",
      "@sapper"
    ],
    "typeRoots": [
      "typings"
    ]
  },
  "include": [
    "src/**/*",
    "src/node_modules"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ]
}
