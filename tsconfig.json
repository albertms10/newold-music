{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "es2017",
      "dom",
      "webworker"
    ],
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "components/*": ["src/components/*"],
      "database/*": ["src/database/*"],
      "modules/*": ["src/modules/*"],
      "public/*": ["src/public/*"],
      "routes/*": ["src/routes/*"],
      "services/*": ["src/services/*"]
    },
    "types": [
      "svelte",
      "node",
      "@sapper"
    ],
    "typeRoots": [
      "typings"
    ]
  },
  "include": [
    "src/**/*",
    "src/node_modules"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ]
}
